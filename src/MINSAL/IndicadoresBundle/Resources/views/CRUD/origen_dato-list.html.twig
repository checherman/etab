{% extends 'IndicadoresBundle:CRUD:base_list.html.twig' %}
{% block javascripts %}
    {{ parent() }}
    <script>
    $(document).ready(function() {
    	$(".pagination ul").attr("class","pagination");
    });
	</script>
{% endblock %} 
{% block stylesheets %}
    {{ parent() }}
<style>
.table {  table-layout:fixed; width:100%}
.table td { 
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	cursor:default;
}

.table th { 
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
	cursor:default;
}
.table th:nth-child(1) {width: 30px;}
.table th:last-child {width: 150px;}

</style>  
{% endblock %} 
{% block actions %}
    <div class="sonata-actions">
        {% include 'IndicadoresBundle:Core:create_button.html.twig' %}
    </div>
{% endblock %}
